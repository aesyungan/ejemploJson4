<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xl.ejemplojson.Compas">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:gravity="bottom|left"
        android:layout_height="match_parent">
        <TextView
            android:text="Total:"
            android:textSize="25dp"
            android:textColor="#f22020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtTotalCalcular"
            android:text="10"
            android:textSize="35dp"
            android:textColor="#f22020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="$"
            android:textSize="35dp"
           android:textColor="#f22020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom|center"
        android:padding="16dp"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_input_add"
            android:text="Agregar Productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/scan_button" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:gravity="bottom|right"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_media_next"
            android:text="Agregar Productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/scan_calcualTotal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView

            android:id="@+id/listProductoScaner"
            android:layout_width="match_parent"
            tools:listitem="@layout/row_cliente"
            android:layout_height="match_parent" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>


</FrameLayout>
